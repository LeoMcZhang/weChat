/**index.wxss**/
.container {
  background-color: #f2f2f2;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0 100rpx;
}
.page_title {
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
}
.form_wrap {
  margin-bottom: 50rpx;
}
.form_wrap .ipt_wrap{
  padding: 20rpx 10rpx;
  border: 1px solid #e3e3e3;
  background-color: #fff;
}
.form_wrap .ipt_wrap:first-child {
  border-bottom: 0;
}
.form_wrap input[type=text] , .form_wrap input[type=password]{
  line-height: 36rpx;
  font-size: 28rpx;
}
.login_btn , .index_btn {
  font-size: 28rpx;
}
.login_btn {
  background-color: #bb2c08;
  color: #fff;
  margin-bottom: 30rpx;
}