/**index.wxss**/
.list_cont .list_block {
  font-size: 28rpx;
  display: flex;
}

.list_cont .list_block .left_block {
  width: 80rpx;
  line-height: 120rpx;
  text-align: center;
  color: #888;
}

.list_cont .list_block .left_block image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.list_cont .list_block .right_block {
  width: 100%;
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 0;
}

.list_cont .list_top .right_block , .list_cont .list_top .left_block {
  line-height: 70rpx;
}

.list_cont .list_top .right_block {
  padding: 0;
}

.list_cont .list_block .top_block {
  line-height: 50rpx;
}

.list_cont .list_block .bottom_block  {
  line-height: 30rpx;
  font-size: 24rpx;
  color: #666;
}