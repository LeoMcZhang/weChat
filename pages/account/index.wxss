/**index.wxss**/
.account_page {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #f2f2f2!important;
}
.account_info {
  padding: 60rpx 0;
}
.account_info image {
  width: 170rpx;
  height: 170rpx;
  margin: 0 auto 20rpx;
  display: block;
}
.account_info .account_name {
  font-size: 32rpx;
  text-align: center;
  width: 100%;
  color: #bb2c08;
}

.menu_block .menu_tab {
 display: flex;
 align-items: center;
 line-height: 100rpx;
 background-color: #fff;
}

.menu_block .menu_tab image {
  width: 60rpx;
  height: 60rpx;
  margin: 0 20rpx;
}

.menu_block .menu_tab .menu_text {
  color: #333;
  line-height: 60rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  width: 100%;
  border-bottom: 1rpx solid #ddd;
}